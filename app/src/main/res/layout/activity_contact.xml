<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.korolkir.contactsdemo.view.ContactActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:titleTextColor="@color/idItemTextColor"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>
        <TextView
            android:id="@+id/post_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:padding="40dp"
            android:gravity="center"
            android:textColor="@color/idItemTextColor"
            android:text="4"
            android:layout_alignParentLeft="true"
            android:background="@color/colorAccent"
            android:textSize="40sp"/>
        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_toRightOf="@+id/post_id"
            android:layout_alignBottom="@+id/post_id"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/idItemTextColor"
                android:text="Name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/post_id"
                android:layout_toEndOf="@+id/post_id" />
            <TextView
                android:id="@+id/Nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/idItemTextColor"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_below="@+id/name"
                android:layout_toEndOf="@+id/post_id"
                android:layout_toRightOf="@+id/post_id"
                android:text="Nickname"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/name_layout">
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/idItemTextColor"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:text="Email"/>
            <TextView
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/idItemTextColor"
                android:textSize="20sp"
                android:layout_below="@+id/email"
                android:text="Website"/>
            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/idItemTextColor"
                android:textSize="20sp"
                android:layout_below="@+id/website"
                android:text="Phone"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/idItemTextColor"
                android:layout_below="@+id/phone"
                android:text="City"/>
        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>


</RelativeLayout>
